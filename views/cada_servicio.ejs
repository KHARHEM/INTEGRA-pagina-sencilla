  if (!service) {
    return <div className="pt-32 text-center">Servicio no encontrado</div>;
  }

  return (
    <div className="pt-24 min-h-screen bg-gray-50 animate-fade-in">
      <div className="max-w-6xl mx-auto px-4 py-12">
        <button 
          onClick={() => onNavigate(Page.SERVICES)}
          className="mb-8 flex items-center text-gray-500 hover:text-integra transition-colors"
        >
          ← Volver a Servicios
        </button>

        <div className="bg-white rounded-3xl overflow-hidden shadow-xl">
          <div className="h-64 md:h-96 w-full relative">
            <img src={service.image} alt={service.title} className="w-full h-full object-cover" />
            <div className="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
              <h1 className="text-4xl md:text-6xl font-bold text-white p-8 md:p-12">{service.title}</h1>
            </div>
          </div>
          
          <div className="p-8 md:p-12">
            <div className="flex flex-col md:flex-row gap-12">
              <div className="md:w-2/3">
                <h2 className="text-2xl font-bold text-integra mb-6">Descripción del Servicio</h2>
                <p className="text-gray-700 text-lg leading-relaxed whitespace-pre-line">
                  {service.fullDescription}
                </p>
                
                <div className="mt-8 p-6 bg-gray-50 rounded-xl border border-gray-100">
                  <h3 className="font-bold text-gray-900 mb-2">¿Por qué elegir este servicio?</h3>
                  <ul className="list-disc list-inside text-gray-600 space-y-2">
                    <li>Supervisión profesional constante.</li>
                    <li>Adaptación a tu nivel físico actual.</li>
                    <li>Equipamiento de última generación.</li>
                  </ul>
                </div>
              </div>

              <div className="md:w-1/3">
                <div className="bg-white border-2 border-integra/20 rounded-2xl p-8 sticky top-32 shadow-lg">
                  <h3 className="text-xl font-bold text-center mb-4">¿Te interesa?</h3>
                  <p className="text-center text-gray-500 text-sm mb-6">
                    Reserva una cita o solicita más información sobre {service.title}.
                  </p>
                  <button 
                    onClick={() => onNavigate(Page.CONTACT)}
                    className="w-full bg-integra text-white font-bold py-4 rounded-xl hover:bg-integra-dark transition-all transform hover:scale-105 shadow-md"
                  >
                    CONTACTAR AHORA
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default ServiceDetail;